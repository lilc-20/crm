<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.edu.hzau.crm.workbench.dao.ActivityRemarkDao">

    <select id="selectByActId" resultType="int">
        select count(*) from tbl_activity_remark
        where activityId in
        <foreach collection="array" item="id" open="(" close=")" separator=",">
            #{id}
        </foreach>
    </select>

    <delete id="deleteByActId">
        delete from tbl_activity_remark
        where activityId in
        <foreach collection="array" item="id" open="(" close=")" separator=",">
            #{id}
        </foreach>
    </delete>

    <select id="selectRemarks" resultType="cn.edu.hzau.crm.workbench.domain.ActivityRemark">
        select * from tbl_activity_remark
        where activityId = #{id}
    </select>

</mapper>